<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:entities="http://www.opendatakit.org/xforms/entities">
    <h:head>
        <h:title>Two Questions Entity Update</h:title>
        <model odk:xforms-version="1.0.0" entities:entities-version="2024.1.0">
            <instance>
                <data id="two_questions_entity_update" version="1">
                    <person1>
                        <person/>
                        <name/>
                        <meta>
                            <entity dataset="people" update="true" id="" baseVersion="" trunkVersion="" branchId="">
                                <label/>
                            </entity>
                        </meta>
                    </person1>
                    <person2>
                        <person/>
                        <name/>
                        <meta>
                            <entity dataset="people" update="true" id="" baseVersion="" trunkVersion="" branchId="">
                                <label/>
                            </entity>
                        </meta>
                    </person2>
                    <meta>
                        <instanceID/>
                        <instanceName/>
                    </meta>
                </data>
            </instance>

            <instance id="people" src="jr://file-csv/people.csv"/>

            <bind nodeset="/data/person1/person" type="string"/>
            <bind nodeset="/data/person1/name" type="string" entities:saveto="full_name"/>
            <bind nodeset="/data/person2/person" type="string"/>
            <bind nodeset="/data/person2/name" type="string" entities:saveto="full_name"/>

            <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>

            <bind nodeset="/data/person1/meta/entity/@id" type="string" calculate="/data/person1/person"/>
            <bind calculate="/data/person1/name" nodeset="/data/person1/meta/entity/label" type="string"/>
            <bind nodeset="/data/person1/meta/entity/@baseVersion" calculate="instance('people')/root/item[name=/data/person1/person]/__version" type="string"/>
            <bind nodeset="/data/person1/meta/entity/@trunkVersion" calculate="instance('people')/root/item[name=/data/person1/person]/__trunkVersion" type="string"/>
            <bind nodeset="/data/person1/meta/entity/@branchId" calculate="instance('people')/root/item[name=/data/person1/person]/__branchId" type="string"/>

            <bind nodeset="/data/person2/meta/entity/@id" type="string" calculate="/data/person2/person"/>
            <bind calculate="/data/person2/name" nodeset="/data/person2/meta/entity/label" type="string"/>
            <bind nodeset="/data/person2/meta/entity/@baseVersion" calculate="instance('people')/root/item[name=/data/person2/person]/__version" type="string"/>
            <bind nodeset="/data/person2/meta/entity/@trunkVersion" calculate="instance('people')/root/item[name=/data/person2/person]/__trunkVersion" type="string"/>
            <bind nodeset="/data/person2/meta/entity/@branchId" calculate="instance('people')/root/item[name=/data/person2/person]/__branchId" type="string"/>
        </model>
    </h:head>
    <h:body>
        <group ref="/data/person1">
            <select1 ref="/data/person1/person">
                <label>Select person</label>
                <itemset nodeset="instance('people')/root/item">
                    <value ref="name"/>
                    <label ref="label"/>
                </itemset>
            </select1>
            <input ref="/data/person1/name">
                <label>Name</label>
            </input>
        </group>
        <group ref="/data/person2">
            <select1 ref="/data/person2/person">
                <label>Select person</label>
                <itemset nodeset="instance('people')/root/item">
                    <value ref="name"/>
                    <label ref="label"/>
                </itemset>
            </select1>
            <input ref="/data/person2/name">
                <label>Name</label>
            </input>
        </group>
    </h:body>
</h:html>
