<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:entities="http://www.opendatakit.org/xforms/entities">
    <h:head>
        <h:title>Two Questions Entity Registration</h:title>
        <model odk:xforms-version="1.0.0" entities:entities-version="2024.1.0">
            <instance>
                <data id="two_questions_entity" version="1">
                    <person1>
                        <name/>
                        <meta>
                            <entity dataset="people" create="1" id="">
                                <label/>
                            </entity>
                        </meta>
                    </person1>
                    <person2>
                        <name/>
                        <meta>
                            <entity dataset="people" create="1" id="">
                                <label/>
                            </entity>
                        </meta>
                    </person2>
                    <meta>
                        <instanceID/>
                        <instanceName/>
                    </meta>
                </data>
            </instance>
            <bind nodeset="/data/person1/name" type="string" entities:saveto="full_name"/>
            <bind nodeset="/data/person2/name" type="string" entities:saveto="full_name"/>

            <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>

            <bind nodeset="/data/person1/meta/entity/@id" type="string"/>
            <setvalue event="odk-instance-first-load" ref="/data/person1/meta/entity/@id" value="uuid()"/>
            <bind calculate="/data/person1/name" nodeset="/data/person1/meta/entity/label" type="string"/>

            <bind nodeset="/data/person2/meta/entity/@id" type="string"/>
            <setvalue event="odk-instance-first-load" ref="/data/person2/meta/entity/@id" value="uuid()"/>
            <bind calculate="/data/person2/name" nodeset="/data/person2/meta/entity/label" type="string"/>
        </model>
    </h:head>
    <h:body>
        <group ref="/data/person1">
            <input ref="/data/person1/name">
                <label>Name</label>
            </input>
        </group>
        <group ref="/data/person2">
            <input ref="/data/person2/name">
                <label>Name</label>
            </input>
        </group>
    </h:body>
</h:html>
