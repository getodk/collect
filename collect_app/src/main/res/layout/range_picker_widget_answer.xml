<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.odk.collect.androidshared.ui.multiclicksafe.MultiClickSafeButton
        android:id="@+id/widget_button"
        style="?widgetButtonIconQuestionWidgetStyle"
        android:text="@string/select_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_format_list_bulleted_white_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/widget_answer_text"
        style="@style/Widget.Collect.TextView.WidgetAnswer"
        android:text="@string/no_value_selected" />

</LinearLayout>
