<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Collect.TextView.WidgetAnswer" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/margin_standard</item>
        <item name="android:paddingBottom">@dimen/margin_standard</item>
        <item name="android:paddingStart">@dimen/margin_extra_small</item>
        <item name="android:paddingEnd">@dimen/margin_extra_small</item>
        <item name="android:textAppearance">@style/TextAppearance.Collect.Body1</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>
